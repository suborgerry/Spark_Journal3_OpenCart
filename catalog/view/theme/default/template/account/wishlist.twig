{{ header }}
<div id="account-wishlist" class="container">
    <div class="breadcrumb-wrapper">
    <ul class="breadcrumb">
      {% for breadcrumb in breadcrumbs %}
        <li class="item is-active"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
          <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-chevron-right" viewBox="0 0 478.448 478.448"><g><g>
                <polygon points="131.659,0 100.494,32.035 313.804,239.232 100.494,446.373 131.65,478.448 377.954,239.232"></polygon>
              </g></g><g></g><g></g><g></g><g></g><g></g><g></g><g></g><g></g><g></g><g></g><g></g><g></g><g></g><g></g><g></g></svg>
        </li>
      {% endfor %}
    </ul>
      <h1 class="page-heading">{{ heading_title }}</h1>
  </div>
  {% if success %}
  <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
    <button type="button" class="close" data-dismiss="alert">&times;</button>
  </div>
  {% endif %}
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
{#      <h2>{{ heading_title }}</h2>#}
      {% if products %}
      <div class="table-responsive">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <td class="text-center">{{ column_image }}</td>
              <td class="text-left">{{ column_name }}</td>
              <td class="text-left">{{ column_model }}</td>
              <td class="text-right">{{ column_stock }}</td>
              <td class="text-right">{{ column_price }}</td>
              <td class="text-right">{{ column_action }}</td>
            </tr>
          </thead>
          <tbody>
          
          {% for product in products %}
          <tr>
            <td class="text-center">{% if product.thumb %}<a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" /></a>{% endif %}</td>
            <td class="text-left"><a href="{{ product.href }}">{{ product.name }}</a></td>
            <td class="text-left">{{ product.model }}</td>
            <td class="text-right">{{ product.stock }}</td>
            <td class="text-right">{% if product.price %}
              <div class="price"> {% if not product.special %}
                {{ product.price }}
                {% else %} <b>{{ product.special }}</b> <s>{{ product.price }}</s> {% endif %} </div>
              {% endif %}</td>
            <td class="text-right"><button type="button" onclick="cart.add('{{ product.product_id }}');" data-toggle="tooltip" title="{{ button_cart }}" class="btn btn-primary"><i class="fa fa-shopping-cart"></i></button>
              <a href="{{ product.remove }}" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fa fa-times"></i></a></td>
          </tr>
          {% endfor %}
            </tbody>
          
        </table>
{#      </div>#}
      {% else %}
      <p>{{ text_empty }}</p>
      {% endif %}




      <div class="page page-wishlist">
        <div class="wishlist_table_wrapper">
          <table class="wishlist_table" data-wishlist-content="">
            <thead>
            <tr class="wishlist_row">
              <th class="wishlist_col wishlist_image text-center">
                <span class="text">Image</span>
              </th>
              <th class="wishlist_col wishlist_name text-left">
                <span class="text">Product Name</span>
              </th>
              <th class="wishlist_col wishlist_price text-center">
                <span class="text">Unit Price</span>
              </th>
              <th class="wishlist_col wishlist_remove text-center">
                <span class="text">remove</span>
              </th>
              <th class="wishlist_col wishlist_add text-center">
                <span class="text">Add to cart</span>
              </th>
            </tr>
            </thead>
            <tbody data-wishlist-container="">
            {% for product in products %}
            <tr class="wishlist_row" data-wishlist-added="wishlist-4403042484299" data-product-id="product-diam-dolor-elerisque-blanest-cursus-tusrae-volutoci">
              <th class="wishlist_col wishlist_image text-center">
                <a href="{{ product.href }}" class="product-grid-image" >
                  {% if product.thumb %}
                  <img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}"/>{% endif %}
                </a>
              </th>
              <th class="wishlist_col wishlist_name text-left">
                <div class="product-vendor">
                  <a href="/collections/vendors?q=Olin Versai®" title="Olin Versai®">Olin Versai®</a>
                </div>
                <a class="product-title" href="/products/diam-dolor-elerisque-blanest-cursus-tusrae-volutoci" title="Diam dolor elerisque blanest cursus tusrae volutoci">Diam dolor elerisque blanest cursus tusrae volutoci</a>
              </th>
              <th class="wishlist_col wishlist_price text-center"><div class="product-price"><span class="price-item">
                    <span class="money">$140.00</span>
                  </span>
                </div>
              </th>
              <th class="wishlist_col wishlist_remove text-center">
                <a class="btn btn--secondary product-remove whislist-added" href="{{ product.remove }}"
                                                                      data-product-handle="diam-dolor-elerisque-blanest-cursus-tusrae-volutoci"
                                                                      data-icon-wishlist="" data-id="4403042484299"><span class="icon icon--big">×</span>{{ button_remove }}</a></th>
              <th class="wishlist_col wishlist_add text-center">
                <form action="/cart/add" method="post" class="variants" id="wishlist-product-form-4403042484299" data-id="product-actions-4403042484299" enctype="multipart/form-data">
                  <button class="btn product-btn product-btn-soldOut" onclick="cart.add('{{ product.product_id }}');"  disabled="">{{ button_cart }}</button>
                </form>
              </th>
            </tr>
            {% endfor %}
          </table>
        </div>
        <div class="wishlist-footer">
          <div class="button-share">
            <a class="share" href="mailto:?subject= Wish List&amp;body=" aria-describedby="a11y-external-message">
              <svg class="icon"><use xlink:href="#icon-email"></use></svg>
              <span>Share my Wishlist Via Email</span>
            </a>
          </div>
          <div class="wishlist_pagination">
            <ul id="wishlist_pagination" class="pagination"></ul>
          </div>
        </div>
      </div>
    </div>
    <div class="buttons clearfix">
      <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
    </div>
    {{ content_bottom }}</div>
  {{ column_right }}</div>
</div>
{{ footer }}