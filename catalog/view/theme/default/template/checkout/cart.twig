<script>
  $(".plus").on("click", (function() {
            let up = $(this).parents(".qty-group").find("input");
            up.val(Number(up.val())+1) ;
          }
  ));
  $(".minus").on("click", (function() {
            let up = $(this).parents(".qty-group").find("input");
            if(Number(up.val())>1){
              up.val(Number(up.val())-1);
            }
          }
  ));
</script>
