                <a class="social-icon twitter" href="https://twitter.com/" title="Twitter" target="_blank"
                   aria-label="link">
                    <svg class="icon">
                        <use xlink:href="#icon-twitter"/>
                    </svg>
                </a>
                <a class="social-icon instagram" href="http://instagram.com/" title="Instagram" target="_blank"
                   aria-label="link">
                    <svg class="icon">
                        <use xlink:href="#icon-instagram"/>
                    </svg>
                </a>
                <a class="social-icon pinterest" href="https://pinterest.com/" title="Pinterest" target="_blank"
                   aria-label="link">
